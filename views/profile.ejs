        <section>
                <h1>My Profile</h1>
                <div style="border: 2px solid rgb(12, 158, 243)" class="radius-border">
            <form action="/get-car-details" method="POST" class="form-section color-blue">
                <!-- ... existing car details ...  -->
                <div>
                    <label for="make">Car Make: </label>
                    <input
                        type="text"
                        id="make"
                        name="make"
                        placeholder="Make"
                        required
                    />
                </div>
                <div>
                    <label for="model">Car Model: </label>
                    <input
                        type="text"
                        id="model"
                        name="model"
                        placeholder="Model"
                        required
                    />
                </div>
                <div>
                <label for="productionYear">Production Year: </label>
                <input
                type="number"
                id="productionYear"
                name="productionYear"
                min="1900"
                max="2099"
                step="1" />
                </div>
                <div class="form-group">
                    <input
                        type="reset"
                        onclick="return confirm('Do you really want to reset the form?');"
                        class="reset-button"
                    />
                    <input type="submit" class="submit-button" />
                </div>
            </div>
            </form>
        </div>
        </section>
    </body>
</html>